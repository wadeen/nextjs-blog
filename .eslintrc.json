{
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/warnings"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "@next/next/no-img-element": "off",
    "react/no-unknown-property": ["error", { "ignore": ["css"] }], // emotionのcss prop 無視
    "react/display-name": "off" // 無名関数のmemo化を許容
  }
}
